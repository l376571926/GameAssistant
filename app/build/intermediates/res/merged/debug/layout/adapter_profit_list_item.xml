<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:descendantFocusability="blocksDescendants"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/adapter_profit_list_item_icon_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@drawable/ic_pull_logo"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_profit_list_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="name"
            android:textColor="@color/list_item_title_color"
            android:textSize="@dimen/list_item_title_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/adapter_profit_list_item_score_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="score"
            android:textColor="@color/list_item_content_color"
            android:textSize="@dimen/list_item_content_text_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapter_profit_list_item_count_dl_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="count_dl"
                android:textColor="@color/list_item_content_color"
                android:textSize="@dimen/list_item_content_text_size"/>

            <TextView
                android:id="@+id/adapter_profit_list_item_size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:text="size"
                android:textColor="@color/list_item_content_color"
                android:textSize="@dimen/list_item_content_text_size"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_adapter_profit_list_item_btn"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/adapter_profit_list_item_all_prize_tv"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="@string/all_prize"
            />


    </LinearLayout>

</LinearLayout>
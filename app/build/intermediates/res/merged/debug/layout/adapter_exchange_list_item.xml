<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:descendantFocusability="blocksDescendants"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/adapter_exchange_icon_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_exchange_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"/>

        <TextView
            android:id="@+id/adapter_exchange_consume_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="remain"/>

        <TextView
            android:id="@+id/adapter_exchange_remain_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="content"/>

    </LinearLayout>

    <Button
        android:id="@+id/adapter_exchange_btn"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_margin="10dp"
        android:background="@drawable/selector_gift_blue_btn"
        android:text="@string/exchange_list_btn"/>

</LinearLayout>
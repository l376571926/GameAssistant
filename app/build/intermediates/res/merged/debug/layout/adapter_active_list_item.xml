<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:descendantFocusability="blocksDescendants"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/adapter_active_icon_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/adapter_active_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="aname"
            android:textColor="@color/list_item_title_color"
            android:textSize="@dimen/list_item_title_text_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/adapter_active_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shortname"
            android:textColor="@color/list_item_content_color"
            android:textSize="@dimen/list_item_content_text_size"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adapter_active_count_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="@string/total_join_user"
                android:textColor="@color/list_item_content_color"
                android:textSize="@dimen/list_item_content_text_size"/>

            <TextView
                android:id="@+id/adapter_active_status_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="status"
                android:textColor="@color/list_item_content_color"
                android:textSize="@dimen/list_item_content_text_size"/>
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_next"/>


</LinearLayout>
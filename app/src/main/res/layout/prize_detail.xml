<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/prize_detail_icon_iv"
        android:layout_width="match_parent"
        android:layout_height="450dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/prize_detail_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="prize_name"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/prize_detail_remain_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/remain_count"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <Button
        android:id="@+id/prize_detail_consume_btn"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/exchange_at_now"/>
</LinearLayout>